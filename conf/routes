# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Users
GET     /users                      controllers.Application.all

# Email verification
POST    /sendVerification           controllers.Application.sendVerificationEmail
GET     /register                   controllers.Application.registerPage
POST    /register                   controllers.Application.register

# Dashboard
GET     /dashboard                  controllers.Dashboard.index
GET     /dashboard/referrals        controllers.Dashboard.referrals(email: String)
GET     /dashboard/rankings         controllers.Dashboard.rankings

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
